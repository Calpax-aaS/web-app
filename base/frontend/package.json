{
  "name": "bootstrap-calpax",
  "version": "0.1.0",
  "private": true,
  "description": "Bootstrap 5 Calpax",
  "author": "Damien Cuenot",
  "license": "MIT",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o ../static/base/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace ../static/base/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --css ../static/base/starter.css --content index.html --output ../static/base/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "starter",
    "template"
  ],
  "dependencies": {
    "bootstrap": "5.0.0-beta3",
    "@popperjs/core": "^2.9.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.3",
    "postcss-cli": "^8.3.1",
    "purgecss": "^3.1.3",
    "serve": "^11.3.2",
    "stylelint": "^13.8.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  }
}
